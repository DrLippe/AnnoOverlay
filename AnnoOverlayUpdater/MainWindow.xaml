<Window x:Class="AnnoOverlayUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnnoOverlayUpdater"
        mc:Ignorable="d"
        Title="Anno 1800 Overlay Updater" Height="150" Width="400">
    <Grid>
        <Label Content="Lade die neuste Version des Overlays herunter..." HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <ProgressBar Height="20" VerticalAlignment="Top" Margin="10,50" Value="{Binding DownloadProgress}"/>
    </Grid>
</Window>
