<Window x:Class="Json2XmlParameters.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Json2XmlParameters"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="inputFile" MinWidth="300" Margin="10,5,5,5"/>
            <Button Content="Open" Margin="5,5,10,5" Width="80" Click="Button_Click" />
        </StackPanel>
        <Button Content="Convert" Margin="10,5" Width="80" Click="Button_Click_1" />
    </StackPanel>
</Window>
